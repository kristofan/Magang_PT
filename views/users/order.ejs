<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Pengisian Data Mempelai</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" type="text/css" href="/order.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<style>
    
        
        .flatpickr-calendar {
            background: #fff; /* Putih bersih untuk kalender */
            border-radius: 10px; /* Sudut lebih bulat */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); /* Bayangan halus */
        }

        .flatpickr-day.selected, .flatpickr-day:hover {
            background-color: #d89d9d; /* Warna latar belakang saat dipilih atau hover */
            color: #fff; /* Warna teks saat dipilih */
        }

        .flatpickr-day.today {
            background-color: #4caf50; /* Hijau untuk hari ini */
            color: #fff; /* Warna teks hari ini */
        }
        .form-container {
    display: flex;
    flex-wrap: wrap; /* Agar form lebih responsif */
    gap: 20px; /* Jarak antar kolom */
}

.form-group {
    flex: 1 1 48%; /* Mengatur setiap elemen memiliki lebar 48% */
}

.form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
}

.form-group input {
    width: 100%;
    padding: 8px;
    border-radius: 5px;
    border: 1px solid #ccc;
}

@media (max-width: 768px) {
    .form-group {
        flex: 1 1 100%; /* Pada layar kecil, form menjadi satu kolom penuh */
    }
}

    </style>
</style>
</head>
<body>
    <div class="container mt-5">
        <h2>Form Pengisian Data Mempelai</h2>
        <form action="/order" method="POST">

            <form action="/order" method="POST">
                <div class="form-container">
                    <div class="form-group">
                        <label for="Nama_Pemesan">Nama Pemesan</label>
                        <input type="text" class="form-control" id="Nama_Pemesan" name="Nama_Pemesan" required>
                    </div>
                    <div class="form-group">
                        <label for="Nama_Mempelai_Pria">Nama Mempelai Pria</label>
                        <input type="text" class="form-control" id="Nama_Mempelai_Pria" name="Nama_Mempelai_Pria" required>
                    </div>
                    <div class="form-group">
                        <label for="Nama_Panggilan_pria">Nama Panggilan Pria</label>
                        <input type="text" class="form-control" id="Nama_Panggilan_pria" name="Nama_Panggilan_pria" required>
                    </div>
                    <div class="form-group">
                        <label for="Ibu_pria">Nama Ibu Pria</label>
                        <input type="text" class="form-control" id="Ibu_pria" name="Ibu_pria" required>
                    </div>
                    <div class="form-group">
                        <label for="Bapak_pria">Nama Bapak Pria</label>
                        <input type="text" class="form-control" id="Bapak_pria" name="Bapak_pria" required>
                    </div>
                    <div class="form-group">
                        <label for="Nama_Mempelai_Wanita">Nama Mempelai Wanita</label>
                        <input type="text" class="form-control" id="Nama_Mempelai_Wanita" name="Nama_Mempelai_Wanita" required>
                    </div>
                    <div class="form-group">
                        <label for="Nama_Panggilan_wanita">Nama Panggilan Wanita</label>
                        <input type="text" class="form-control" id="Nama_Panggilan_wanita" name="Nama_Panggilan_wanita" required>
                    </div>
                    <div class="form-group">
                        <label for="Ibu_wanita">Nama Ibu Wanita</label>
                        <input type="text" class="form-control" id="Ibu_wanita" name="Ibu_wanita" required>
                    </div>
                    <div class="form-group">
                        <label for="Bapak_wanita">Nama Bapak Wanita</label>
                        <input type="text" class="form-control" id="Bapak_wanita" name="Bapak_wanita" required>
                    </div>
                    <div class="form-group">
                        <label for="Tanggal_Akad">Tanggal Akad</label>
                        <input type="date" class="form-control flatpickr" id="Tanggal_Akad" name="Tanggal_Akad" required>
                    </div>
                    <div class="form-group">
                        <label for="Alamat_akad">Alamat Akad</label>
                        <input type="text" class="form-control" id="Alamat_akad" name="Alamat_akad" required>
                    </div>
                    <div class="form-group date-container">
                        <label for="Tanggal_Resepsi">Tanggal Resepsi</label>
                        <input type="text" class="form-control flatpickr" id="Tanggal_Resepsi" name="Tanggal_Resepsi" placeholder="Pilih Tanggal Resepsi" required>
                    </div>                    
                    <div class="form-group">
                        <label for="Alamat_resepsi">Alamat Resepsi</label>
                        <input type="text" class="form-control" id="Alamat_resepsi" name="Alamat_resepsi" required>
                    </div>
                </div>
                
                <div class="cerita-nikah">
                    <div class="Cerita">                         
                        <label>Cerita Nikah</label>
                    </div>
                    <div class="form-group">
                        <label for="Awal_Bertemu">Awal Bertemu</label>
                        <textarea class="form-control" id="Awal_Bertemu" name="Awal_Bertemu"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Saling_jatuh_cinta">Saling Jatuh Cinta</label>
                        <textarea class="form-control" id="Saling_jatuh_cinta" name="Saling_jatuh_cinta"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Memutuskan_untuk_menikah">Memutuskan untuk Menikah</label>
                        <textarea class="form-control" id="Memutuskan_untuk_menikah" name="Memutuskan_untuk_menikah"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="No_Rek">Nomor Rekening</label>
                    <input type="text" class="form-control" id="No_Rek" name="No_Rek" required>                
                </div>
                <div class="form-group">
                    <label for="No_Wa">Nomor Whatsapp</label>
                    <input type="text" class="form-control" id="No_Wa" name="No_Wa" required>                
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" required>                
                </div>
                <div class="form-group">
                    <label for="harga">Harga</label>
                    <input type="number" class="form-control" id="harga" name="harga" required>                
                </div>
                <div class="form-group">
                    <label for="Code">Kode</label>
                    <input type="text" class="form-control" id="Code" name="Code" required>                
                </div>
                <button type="submit" class="btn btn-primary">Kirim Pesanan</button>
            </form>
            
            <input type="hidden" name="JenisUndangan" value="<%= JenisUndangan %>">
            <input type="hidden" name="Code" value="<%= Code %>">
           
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        document.querySelector('form').addEventListener('submit', (event) => {
    // Jika ada logika lain, pastikan untuk tidak memanggil event.preventDefault() kecuali diperlukan
});
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            flatpickr("#Tanggal_Akad", {
                dateFormat: "Y-m-d", // Format tanggal
                altInput: true,
                altFormat: "F, j Y", // Tampilan lebih estetik (contoh: October 9, 2024)
                allowInput: true,
                disableMobile: "true", // Gunakan tampilan Flatpickr di ponsel juga
            });
        });
    </script>
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        flatpickr("#Tanggal_Resepsi", {
            dateFormat: "Y-m-d", // Format tanggal
            altInput: true,
            altFormat: "F, j, Y", // Tampilan lebih estetik (contoh: October 9, 2024)
            allowInput: true,
            disableMobile: "true", // Gunakan tampilan Flatpickr di ponsel juga
        });
    });
</script>
    
   
</body>
</html>
